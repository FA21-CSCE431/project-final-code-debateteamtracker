<p id="notice"><%= notice %></p>

<div class="content-box announcements-bg">
  <div class="crud-body">
    <h1 class="crud-header">Images</h1>
    <table class="crud-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Image</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @images.each do |image| %>
          <tr>
            <td style="width: 20%;">
              <%= link_to image.name, image, class:"crud-show" %>
            </td>
            <td>
              <%= link_to image_tag(image.pic, :style => "max-width: 70%; max-height: 800px;"), image, class:"crud-show" %>
            </td>
            <td><%= link_to 'Edit', edit_image_path(image), class: "crud-button" %></td>
            <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= link_to 'New Image', new_image_path, class: "submit-button" %>
    </div>
  </div> <!-- crud-body -->
  <br>
</div> <!-- content-box -->
