<p id="notice"><%= notice %></p>

<div class="content-box points-events-bg">
  <div class="crud-body">
    <h1 class="crud-header">Points Events</h1>

    <table class="crud-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Value</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>

        <% @points_events.each do |points_event| %>
          <tr>
            <td style="width: 60%;">
              <%= link_to points_event.name, points_event, class:"crud-show" %>
            </td>
            <td style="width: 10%;"><%= points_event.value %></td>
            <td><%= button_to 'Edit', edit_points_event_path(points_event), method: :get, class: "crud-button" %></td>
            <td><%= button_to 'Delete', points_event, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= link_to 'New Points Event', new_points_event_path, class: "submit-button" %>
    </div>
  </div> <!-- crud-body -->
  <br>
</div> <!-- content-box -->
