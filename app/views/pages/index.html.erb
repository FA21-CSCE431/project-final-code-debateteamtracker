              <h3> <%= homepage.about %> </h3>
              <div>
                <p><%= homepage.aboutcontentone %></p>

                <% if !homepage.aboutcontenttwo.empty? %>
                  <p><%= homepage.aboutcontenttwo %></p>
                <% end %>
              </div>

            <div class="right-line"></div>
          </div>
          <div class="about-image">
            <% @homepages.each do |homepage| %>
              <% if !homepage.imageone.empty? or !homepage.imagetwo.empty? or !homepage.imagethree.empty?%>
                <div class="your-class">

                <% if !homepage.imageone.empty? %>
                  <div class="image-container">
                    <%= image_tag(homepage.imageone, style: 'width:100%;height:auto;') %>
                  </div>
                <% end %>

                <% if !homepage.imagetwo.empty? %>
                  <div class="image-container">
                  <%= image_tag(homepage.imagetwo, style: 'width:100%;height:auto;') %>
                  </div>
                <% end %>

                <% if !homepage.imagethree.empty? %>
                  <div class="image-container">
                  <%= image_tag(homepage.imagethree, style: 'width:100%;height:auto;') %>
                  </div>
                <% end %>

                </div>
              <% else %>
                <%= image_tag 'https://res.cloudinary.com/dllhqcpfw/image/upload/v1636952421/img-2_zpe9bv.jpg', style: 'width:100%;height:100%; object-fit: cover' %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>  <!--landing.s2-->
    <% end %>
  <% end %>

      <div class="currentEventsWrapper">
        <div class="currentEvents">
            <% if @events.exists? %>
              <div class="img-cover max-width-body" id="scroll_stop2">
                <h4> Current Events </h4>
          
                <div class="flex-box flex3"> 
                    <% @events.each do |event| %>
                      <div>
                        <h3 class="item-title"><%= event.name %></h3>
                        <p><%= event.description %></p>
                      </div>
                    <% end %>
                </div>

              </div>
            <% end %>
        </div>
      </div>

      <% if @homepages.exists? %>
      <div class="landing_s3 sections">
      <div class="max-width-body">
      
        <% @homepages.each do |homepage| %>
          <h2 class="contact_title"> <%= homepage.contact %> </h2>
          <div class="left-line2"></div>

          <div>
            <p class="content"> <%= homepage.contactcontent %> </p>
            
            <% if !homepage.emailone.empty? %>
              <p class="content"> <%= homepage.emailone %> </p>
            <% end %>

            <% if !homepage.emailtwo.empty? %>
              <p class="content"> <%= homepage.emailtwo %> </p>
            <% end %>

            <% if !homepage.emailthree.empty? %>
              <p class="content"> <%= homepage.emailthree %> </p>
            <% end %>

            <% if !homepage.emailfour.empty? %>
              <p class="content"> <%= homepage.emailfour %> </p>
            <% end %>

            <% if !homepage.emailfive.empty? %>
