<p id="notice"><%= notice %></p>

<div class="content-box">
  <div class="crud-body">
    <h1 class="crud-header">Members</h1>
    <table class="members-table">
      <thead>
        <tr>
          <th class="email">Email</th>
          <th class="name">Name</th>
          <th class="points">Points</th>
          <th class="priority">Priority</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td class="email"><%= member.email %></td>
            <td class="name"><%= member.name %></td>
            <td class="points"><%= member.points %></td>
            <td class="priority"><%= member.priority %></td>
            <td><%= button_to 'Show', member, method: :get %></td>
            <td><%= button_to 'Edit', edit_member_path(member), method: :get %></td>
            <td><%= button_to 'Remove', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Member', new_member_path, class: "submit-button" %>
  </div> <!-- crud-body -->
  <br>
</div> <!-- content-box -->
