<p id="notice"><%= notice %></p>

<%= link_to "Sign Out", destroy_admin_session_path %>

<div class="content-box">
  <div class="crud-body">
    <h1 class="crud-header">Announcements</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Date</th>
          <th>Author</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @announcements.each do |announcement| %>
          <tr>
            <td><%= announcement.title %></td>
            <td><%= announcement.description %></td>
            <td><%= announcement.date %></td>
            <td><%= announcement.author %></td>
            <td><%= link_to 'Show', announcement %></td>
            <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
            <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= link_to 'New Announcement', new_announcement_path, class: "submit-button" %>
    </div>
  </div> <!-- crud-body -->
  <br>
</div> <!-- content-box -->
