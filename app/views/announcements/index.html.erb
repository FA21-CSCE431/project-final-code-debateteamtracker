<p id="notice"><%= notice %></p>

<div class="content-box announcements-bg">
  <div class="crud-body">
    <h1 class="crud-header">Announcements</h1>
    <table class="crud-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Date</th>
          <th>Author</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @announcements.each do |announcement| %>
          <tr>
            <td style="width: 20%;">
              <%= link_to announcement.title, announcement, class:"crud-show" %>
            </td>
            <td style="width: 60%;"><%= announcement.description %></td>
            <td><%= announcement.date.strftime("%B, %d, %Y") %></td>
            <td><%= announcement.author %></td>
            <td><%= button_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= link_to 'New Announcement', new_announcement_path, class: "submit-button" %>
    </div>

  </div> <!-- crud-body -->
  <br>
</div> <!-- content-box -->
