<%= form_with(model: announcement) do |form| %>
  <% if announcement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

      <ul>
        <% announcement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="crud-flex">
    <div class="field" style="flex: 1">
      <%= form.label :title, class: "crud-text" %>
      <%= form.text_field :title, class: "crud-input" %>
    </div>
  </div>
  <div class="crud-flex">
    <div class="field" style="flex: 1">
      <%= form.label :description, class: "crud-text" %>
      <%= form.text_area :description, rows: 10, class: "crud-input" %>
    </div>
  </div> <!-- crud flex -->
  <div class="crud-flex">
    <div class="field" style="flex: 1">
      <%= form.label :date, class: "crud-text" %>
      <%= form.date_field :date, class: "crud-input" %>
    </div>
  </div> <!-- crud-flex -->
  <div class="crud-flex">
    <div class="field" style="flex: 1">
      <%= form.label :author, class: "crud-text" %>
      <%= form.text_field :author, class: "crud-input" %>
    </div>
  </div> <!-- crud-flex -->

  <div class="crud-flex">
    <div class="field" style="flex: 1">
      <%= fields_for(@group_member_join) do |ab| %>
        <%= ab.label "All Groups", class: "crud-text" %>
        <div class="crud-right">
          <%= collection_select(:groups, :ids, @groups,:id, :title,{} ,{class: "selection-field dropdown"}) %>
          <p class="instruction-text"> Selecting a group will send all members in that group this announcement through email</p>
        </div>
      <% end %>
    </div>
  </div> <!-- crud-flex -->

  <div class="crud-flex">
    <div class="actions crud-submit">
      <%= form.submit class: "submit-button" %>
    </div>
  </div> <!-- crud flex -->
<% end %>
